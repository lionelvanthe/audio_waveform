<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="300sp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
    <TextView android:textSize="12sp" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/ringtone_type_label"/>
    <Spinner android:id="@+id/ringtone_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"/>
    <TextView android:textSize="12sp" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/ringtone_name_label" android:labelFor="@+id/filename"/>
    <EditText android:id="@+id/filename" android:layout_width="280sp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:inputType="text"/>
    <LinearLayout android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp">
        <Button android:id="@+id/save" android:layout_width="100sp" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/file_save_button_save"/>
        <Button android:id="@+id/cancel" android:layout_width="100sp" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/file_save_button_cancel"/>
    </LinearLayout>
</LinearLayout>
